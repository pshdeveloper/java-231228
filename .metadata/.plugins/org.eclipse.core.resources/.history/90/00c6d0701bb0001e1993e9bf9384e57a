package e_Chapter04;

// 축구 선수 클래스 작성
// FootballPlayer 클래스 작성

// 클래스 필드
// : 선수 이름(name), 포지션(position), 팀 이름(team), 골 수(goals)

// 선수 정보를 출력하는 메서드
// : displayInfo() - 반환 X
// : name, position, team, goals

class FootballPlayer {
	String name, position, team;
	int goals;
	
	void displayInfo() {
//		자동 줄 바꿈
//		: window > Editor > Toggle Word Warp
//		: alt + shift + y
		System.out.println(name + "," + position + "," + team + "," + goals);
	}
}
public class Object06 {

	public static void main(String[] args) {
		// FootballPlayer 클래스플 사용한 player1 객체(인스턴스) 생성
		FootballPlayer player1 = new FootballPlayer();
		player1.displayInfo();

	}

}
