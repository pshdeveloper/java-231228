package d_Chapter03;

public class F_ArrayList01 {

	public static void main(String[] args) {
		// 자바의 기본 배열 형태
		// : 한번 생성되면 크기를 변경 X
		// : 새로운 배열을 생성하고, 원래 배열의 요소를 복사
		int[] numbers = new int[5];
		
		// ArraysList 클래스
		// ; 자바의 라이브러리에서 제공하는 기능
		// : java.utils.ArrayList 를 import 해서 사용
		
		// 공통점
		// : 일반 배열과 동일하게 연속된 메모리 공간을 사요ㅏㅇ
		// : 인덱스 번호가 0부터 시작 
		
		// 차이점
		// : 일반 배열은 크기가 고정, ArrayList 는 크기가 가변적
		// : 배열의 타입 지정 시, 일반 데이터 타입이 아닌 참조타입으로 작성
		// : int(Integer), char(Character), boolean(Boolean), String 등
		
		// ArrayList 생성
		// ArrayList<데이터타입> 배열명 = new ArrayList<>(선택);
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		

	}

}
